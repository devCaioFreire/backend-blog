generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String
  posts    Post[]
}

model Post {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  summary  String
  content  String
  image    String?
  date     DateTime
  authorID String   @db.ObjectId
  author   User     @relation(fields: [authorID], references: [id])
}
