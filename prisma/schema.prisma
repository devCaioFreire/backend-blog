generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Post {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  authorID String   @db.ObjectId
  content  String
  date     DateTime @db.Date
  image    String
  summary  String
  title    String
  author   User     @relation(fields: [authorID], references: [id])
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  posts    Post[]
}
